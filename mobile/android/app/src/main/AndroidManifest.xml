     />
    <service android:name="com.reactnativefullscreennotificationincomingcall.IncomingCallService" android:enabled="true" android:stopWithTask="false" android:foregroundServiceType="phoneCall" android:exported="false"/>
   
    <activity 
    android:name=".MainActivity" 
    android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|uiMode" 
    android:launchMode="singleTask" 
    android:windowSoftInputMode="adjustResize" 
    android:exported="true" 
